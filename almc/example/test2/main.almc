import ../localstd/io;
import ../localstd/time;
from ../localstd/random import rand, srand;

fnc randomize() : void {
    let a: LPSYSTEMTIME;
    GetLocalTime(&a);

    srand(a.wMilliseconds);
}

fnc entry main() : i32 {
    randomize();

    enum {
        SIZE = 10
    }

    let array: i32[SIZE];

    for (let f: i32 = 0; f < SIZE; f += 1)
        array[f] = (cast(i32)rand()) % 10,
            printf("%d) %d\n", f+1, array[f]);
    printf("\n");

    let buffer: i32;
    for (let i: i32 = 0; i < SIZE; i += 1)
        for (let j: i32 = i+1; j < SIZE; j += 1)
            if (array[i] < array[j])
                buffer = array[i], array[i] = array[j],
                    array[j] = buffer;

    for (let z: i32 = 0; z < SIZE; z += 1)
        printf("%d) %d\n", z+1, array[z]);
    for (;;);
    return 0;
}
